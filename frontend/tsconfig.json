{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["dom", "dom.iterable", "esnext"],
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "allowJs": false,
        "skipLibCheck": true,
        "isolatedModules": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "references": [{ "path": "../common" }],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".eslintrc.js",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
