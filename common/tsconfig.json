{
    "compilerOptions": {
        "target": "es2022",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "incremental": true,
        "baseUrl": ".",
        "outDir": "dist",
        "allowJs": false,
        "skipLibCheck": true,
        "isolatedModules": true,
        "composite": true
    }
}
