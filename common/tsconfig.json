{
    "compilerOptions": {
        "target": "es2022",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "outDir": "./dist",
        "rootDir": "./src",
        "allowJs": false,
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        ".eslintrc.js",
        ".next/types/**/*.ts",
        "./src/utils/*.ts"
    ],
    "exclude": ["node_modules"]
}
